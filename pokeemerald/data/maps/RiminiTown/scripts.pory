raw `
.set LOCALID_TWIN, 1
.set LOCALID_MOM, 4
.set LOCALID_RIVAL, 7
.set LOCALID_BIRCH, 8

RiminiTown_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, RiminiTown_OnTransition
	map_script MAP_SCRIPT_ON_FRAME_TABLE, RiminiTown_OnFrame
	map_script MAP_SCRIPT_ON_WARP_INTO_MAP_TABLE, RiminiTown_OnWarp
	.byte 0

	@ State descriptions for VAR_RIMINI_TOWN_STATE
	@ 1: Met Rival
	@ 2: Saving Birch
	@ 3: Received Pokedex
	@ 4: Received Running Shoes

	@ State descriptions for VAR_RIMINI_INTRO_STATE
	@ 1: In truck male
	@ 2: In truck female (l'ho cancellato)
	@ 3: Entered house
	@ 4: Told to go set clock
	@ 5: Entered 2F to set clock
	@ 6: Set clock
	@ 7: Told to go meet rival

	@ State descriptions for VAR_RIMINI_HOUSES_STATE_MAY
	@                    and VAR_RIMINI_HOUSES_STATE_BRENDAN
	@ 1: On Truck (and is corresponding gender)
	@ 2: Met Rival's Mom (and is corresponding gender)
	@ 3: Entered Hall of Fame
	@ 4: Completed Lati TV / SS Ticket event
	@ 5: Exited house after above event

	@ State descriptions for VAR_RIMINI_RIVAL_STATE
	@ 1: Never occurs
	@ 2: Entered Rival's bedroom
	@ 3: Met Rival
	@ 4: Received Pokedex


RiminiTown_OnTransition:
	setflag FLAG_VISITED_RIMINI_TOWN
	call Common_EventScript_SetupRivalGfxId
	call_if_unset FLAG_RESCUED_BIRCH, RiminiTown_EventScript_SetTwinPos
	call_if_eq VAR_RIMINI_TOWN_STATE, 3, RiminiTown_EventScript_SetMomStandingInFrontOfDoorPos
	call_if_eq VAR_RIMINI_HOUSES_STATE_MAY, 4, RiminiTown_EventScript_SetExitedHouseAfterLatiSSTicketEvent
	call_if_eq VAR_RIMINI_HOUSES_STATE_BRENDAN, 4, RiminiTown_EventScript_SetExitedHouseAfterLatiSSTicketEvent
	call_if_eq VAR_BOLOGNA_RIVAL_STATE, 1, RiminiTown_EventScript_MoveRivalFromBologna
	call_if_eq VAR_RIMINI_RIVAL_STATE, 3, RiminiTown_EventScript_SetRivalLeftForRoute103
	end

RiminiTown_OnFrame:
	map_script_2 VAR_RIMINI_INTRO_STATE, 1, RiminiTown_EventScript_StepOffTruck
	.2byte 0

RiminiTown_EventScript_StepOffTruck::
	lockall
	setvar VAR_TEMP_PAR_4, 5
	setvar VAR_TEMP_PAR_5, 8
	call RiminiTown_EventScript_GoInsideWithMom
	setflag FLAG_HIDE_RIMINI_TOWN_CASA_GAS_TRUCK
	warpsilent MAP_RIMINI_TOWN_CASA_GAS_1F, 8, 8
	waitstate
	releaseall
	end

RiminiTown_EventScript_HideMapNamePopup::
	setflag FLAG_HIDE_MAP_NAME_POPUP
	return

RiminiTown_EventScript_SetRivalLeftForRoute103::
	setflag FLAG_RIVAL_LEFT_FOR_ROUTE103
	return

RiminiTown_EventScript_MoveRivalFromBologna::
	setvar VAR_BOLOGNA_RIVAL_STATE, 2
	setflag FLAG_HIDE_BOLOGNA_TOWN_RIVAL
	return

RiminiTown_EventScript_SetExitedHouseAfterLatiSSTicketEvent::
	setvar VAR_RIMINI_HOUSES_STATE_MAY, 5
	setvar VAR_RIMINI_HOUSES_STATE_BRENDAN, 5
	return

RiminiTown_EventScript_MoveMomToMaysDoor::
	setobjectxyperm LOCALID_MOM, 14, 8
	return

RiminiTown_EventScript_SetTwinPos::
	goto_if_eq VAR_RIMINI_TOWN_STATE, 0, RiminiTown_EventScript_SetTwinGuardingRoutePos
	setobjectxyperm LOCALID_TWIN, 10, 1
	setobjectmovementtype LOCALID_TWIN, MOVEMENT_TYPE_FACE_UP
	return

RiminiTown_EventScript_SetTwinGuardingRoutePos::
	setobjectxyperm LOCALID_TWIN, 7, 2
	setobjectmovementtype LOCALID_TWIN, MOVEMENT_TYPE_FACE_DOWN
	return

RiminiTown_EventScript_SetMomStandingInFrontOfDoorPos::
	clearflag FLAG_HIDE_RIMINI_TOWN_MOM_OUTSIDE
	setobjectmovementtype LOCALID_MOM, MOVEMENT_TYPE_FACE_DOWN
	checkplayergender
	call_if_eq VAR_RESULT, MALE, RiminiTown_EventScript_SetMomInFrontOfDoorMale
	call_if_eq VAR_RESULT, FEMALE, RiminiTown_EventScript_SetMomInFrontOfDoorFemale
	return

RiminiTown_EventScript_SetMomInFrontOfDoorMale::
	setobjectxyperm LOCALID_MOM, 5, 9
	return

RiminiTown_EventScript_SetMomInFrontOfDoorFemale::
	setobjectxyperm LOCALID_MOM, 14, 9
	return

RiminiTown_Movement_MomExitHouse:
	walk_down
	step_end

RiminiTown_Movement_MomApproachDoor:
	delay_16
	delay_8
	walk_in_place_faster_up
	step_end

RiminiTown_Movement_PlayerApproachDoor:
	delay_16
	delay_8
	walk_right
	walk_up
	step_end

RiminiTown_Movement_MomEnterHouse:
