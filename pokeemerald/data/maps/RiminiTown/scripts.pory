	delay_16
	delay_16
	delay_16
	step_end

RiminiTown_EventScript_BeginDexUpgradeScene::
	lockall
	playse SE_PIN
	applymovement LOCALID_BIRCH, Common_Movement_ExclamationMark
	waitmovement 0
	delay 80
	msgbox RiminiTown_Text_BirchSomethingToShowYouAtLab, MSGBOX_DEFAULT
	closemessage
	clearflag FLAG_HIDE_RIMINI_TOWN_RIVAL
	clearflag FLAG_HIDE_RIMINI_TOWN_BIRCH
	delay 20
	clearflag FLAG_HIDE_MAP_NAME_POPUP
	warp MAP_RIMINI_TOWN_CASA_TOMMI, 6, 5
	waitstate
	releaseall
	end

RiminiTown_OnWarp:
	map_script_2 VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 1, RiminiTown_EventScript_SetRivalBirchPosForDexUpgrade
	.2byte 0

RiminiTown_EventScript_SetRivalBirchPosForDexUpgrade::
	addobject LOCALID_BIRCH
	addobject LOCALID_RIVAL
	checkplayergender
	goto_if_eq VAR_RESULT, MALE, RiminiTown_EventScript_SetRivalBirchPosForDexUpgradeMale
	goto RiminiTown_EventScript_SetRivalBirchPosForDexUpgradeFemale
	end

RiminiTown_EventScript_SetRivalBirchPosForDexUpgradeMale::
	setobjectxy LOCALID_RIVAL, 6, 10
	setobjectxy LOCALID_BIRCH, 5, 10
	end

RiminiTown_EventScript_SetRivalBirchPosForDexUpgradeFemale::
