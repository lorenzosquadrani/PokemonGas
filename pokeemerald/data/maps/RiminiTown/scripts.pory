RiminiTown_EventScript_Mom::
	lock
	faceplayer
	checkplayergender
	call_if_eq VAR_RESULT, MALE, RiminiTown_EventScript_SetHomeDoorCoordsMale
	call_if_eq VAR_RESULT, FEMALE, RiminiTown_EventScript_SetHomeDoorCoordsFemale
	call RiminiTown_EventScript_GiveRunningShoes
	applymovement LOCALID_MOM, Common_Movement_WalkInPlaceFasterUp
	waitmovement 0
	opendoor VAR_0x8009, VAR_0x800A
	waitdooranim
	applymovement LOCALID_MOM, RiminiTown_Movement_MomExitThroughDoor
	waitmovement 0
	hideobjectat LOCALID_MOM, MAP_RIMINI_TOWN
	closedoor VAR_0x8009, VAR_0x800A
	waitdooranim
	goto RiminiTown_EventScript_SetReceivedRunningShoes
	end

RiminiTown_EventScript_SetReceivedRunningShoes::
	removeobject LOCALID_MOM
	setflag FLAG_SYS_B_DASH
	setvar VAR_RIMINI_TOWN_STATE, 4
	release
	end

RiminiTown_EventScript_GiveRunningShoes::
	msgbox RiminiTown_Text_WearTheseRunningShoes, MSGBOX_DEFAULT
	playfanfare MUS_OBTAIN_ITEM
	message RiminiTown_Text_SwitchShoesWithRunningShoes
	waitfanfare
	setflag FLAG_RECEIVED_RUNNING_SHOES
	msgbox RiminiTown_Text_ExplainRunningShoes, MSGBOX_DEFAULT
	msgbox RiminiTown_Text_ComeHomeIfAnythingHappens, MSGBOX_DEFAULT
	closemessage
	delay 30
	return

