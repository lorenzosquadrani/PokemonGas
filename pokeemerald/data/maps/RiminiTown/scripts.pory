RiminiTown_EventScript_Twin::
	lock
	faceplayer
	goto_if_set FLAG_ADVENTURE_STARTED, RiminiTown_EventScript_GoodLuck
	goto_if_set FLAG_RESCUED_BIRCH, RiminiTown_EventScript_YouSavedBirch
	goto_if_ne VAR_RIMINI_TOWN_STATE, 0, RiminiTown_EventScript_GoSaveBirch
	msgbox RiminiTown_Text_IfYouGoInGrassPokemonWillJumpOut, MSGBOX_DEFAULT
	release
	end

RiminiTown_EventScript_GoSaveBirch::
	special GetPlayerBigGuyGirlString
	msgbox RiminiTown_Text_CanYouGoSeeWhatsHappening, MSGBOX_DEFAULT
	closemessage
	applymovement LOCALID_TWIN, Common_Movement_FaceOriginalDirection
	waitmovement 0
	setvar VAR_RIMINI_TOWN_STATE, 2
	release
	end

RiminiTown_EventScript_YouSavedBirch::
