RiminiTown_EventScript_GiveRunningShoesTrigger::
	checkplayergender
	call_if_eq VAR_RESULT, MALE, RiminiTown_EventScript_MomNoticePlayerMale
	call_if_eq VAR_RESULT, FEMALE, RiminiTown_EventScript_MomNoticePlayerFemale
	checkplayergender
	call_if_eq VAR_RESULT, MALE, RiminiTown_EventScript_SetHomeDoorCoordsMale
	call_if_eq VAR_RESULT, FEMALE, RiminiTown_EventScript_SetHomeDoorCoordsFemale
	msgbox RiminiTown_Text_WaitPlayer, MSGBOX_DEFAULT
	closemessage
	checkplayergender
	call_if_eq VAR_RESULT, MALE, RiminiTown_EventScript_MomApproachPlayerMale
	call_if_eq VAR_RESULT, FEMALE, RiminiTown_EventScript_MomApproachPlayerFemale
	call RiminiTown_EventScript_GiveRunningShoes
	checkplayergender
	call_if_eq VAR_RESULT, MALE, RiminiTown_EventScript_MomReturnHomeMale
	call_if_eq VAR_RESULT, FEMALE, RiminiTown_EventScript_MomReturnHomeFemale
	goto RiminiTown_EventScript_SetReceivedRunningShoes
	end

