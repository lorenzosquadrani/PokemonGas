	step_end

RiminiTown_Movement_TwinReturnLeft:
	walk_right
	walk_down
	walk_down
	walk_left
	walk_left
	walk_left
	walk_left
	walk_up
	walk_in_place_faster_down
	step_end

RiminiTown_Movement_PushPlayerBackFromRoute:
