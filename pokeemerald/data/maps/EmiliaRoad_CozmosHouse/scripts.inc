EmiliaRoad_CozmosHouse_MapScripts::
	.byte 0

EmiliaRoad_CozmosHouse_EventScript_ProfCozmo::
	lock
	faceplayer
	goto_if_set FLAG_RECEIVED_TM27, EmiliaRoad_CozmosHouse_EventScript_GaveMeteorite
	checkitem ITEM_METEORITE
	goto_if_eq VAR_RESULT, TRUE, EmiliaRoad_CozmosHouse_EventScript_PlayerHasMeteorite
	msgbox EmiliaRoad_CozmosHouse_Text_MeteoriteWillNeverBeMineNow, MSGBOX_DEFAULT
	release
	end

EmiliaRoad_CozmosHouse_EventScript_PlayerHasMeteorite::
	call_if_unset FLAG_TEMP_2, EmiliaRoad_CozmosHouse_EventScript_NoticeMeteorite
	call_if_set FLAG_TEMP_2, EmiliaRoad_CozmosHouse_EventScript_AskForMeteorite
	goto_if_eq VAR_RESULT, NO, EmiliaRoad_CozmosHouse_EventScript_DeclineGiveMeteorite
	msgbox EmiliaRoad_CozmosHouse_Text_PleaseUseThisTM, MSGBOX_DEFAULT
	giveitem ITEM_TM27
	goto_if_eq VAR_RESULT, FALSE, Common_EventScript_ShowBagIsFull
	setvar VAR_TEMP_PAR_4, ITEM_METEORITE
	call Common_EventScript_PlayerHandedOverTheItem
	setflag FLAG_RECEIVED_TM27
	msgbox EmiliaRoad_CozmosHouse_Text_ReallyGoingToHelpMyResearch, MSGBOX_DEFAULT
	release
	end

EmiliaRoad_CozmosHouse_EventScript_NoticeMeteorite::
	msgbox EmiliaRoad_CozmosHouse_Text_MeteoriteWillNeverBeMineNow, MSGBOX_DEFAULT
	msgbox EmiliaRoad_CozmosHouse_Text_IsThatMeteoriteMayIHaveIt, MSGBOX_YESNO
	return

EmiliaRoad_CozmosHouse_EventScript_AskForMeteorite::
	msgbox EmiliaRoad_CozmosHouse_Text_MayIHaveMeteorite, MSGBOX_YESNO
	return

EmiliaRoad_CozmosHouse_EventScript_DeclineGiveMeteorite::
	setflag FLAG_TEMP_2
	msgbox EmiliaRoad_CozmosHouse_Text_CrushedWithDisappointment, MSGBOX_DEFAULT
	release
	end

EmiliaRoad_CozmosHouse_EventScript_GaveMeteorite::
	msgbox EmiliaRoad_CozmosHouse_Text_ReallyGoingToHelpMyResearch, MSGBOX_DEFAULT
	release
	end

EmiliaRoad_CozmosHouse_EventScript_CozmosWife::
	lock
	faceplayer
	goto_if_set FLAG_RECEIVED_TM27, EmiliaRoad_CozmosHouse_EventScript_CozmoIsHappy
	goto_if_set FLAG_DEFEATED_EVIL_TEAM_MT_CHIMNEY, EmiliaRoad_CozmosHouse_EventScript_CozmoIsSad
	msgbox EmiliaRoad_CozmosHouse_Text_CozmoWentToMeteorFalls, MSGBOX_DEFAULT
	release
	end

EmiliaRoad_CozmosHouse_EventScript_CozmoIsSad::
	msgbox EmiliaRoad_CozmosHouse_Text_FeelSorryForCozmo, MSGBOX_DEFAULT
	release
	end

EmiliaRoad_CozmosHouse_EventScript_CozmoIsHappy::
	msgbox EmiliaRoad_CozmosHouse_Text_CozmoIsSoHappy, MSGBOX_DEFAULT
	release
	end

EmiliaRoad_CozmosHouse_Text_MeteoriteWillNeverBeMineNow:
	.string "PROF. COZMO: Oh…\n"
	.string "I never should have let myself be\l"
	.string "conned into telling TEAM MAGMA where\l"
	.string "you can find METEORITES…\p"
	.string "That METEORITE from METEOR FALLS…\n"
	.string "It's never going to be mine now…$"

EmiliaRoad_CozmosHouse_Text_IsThatMeteoriteMayIHaveIt:
	.string "Oh!\n"
	.string "Hah?\p"
	.string "That item…\p"
	.string "Could it be?\p"
	.string "Is it the METEORITE that TEAM MAGMA\n"
	.string "took from METEOR FALLS?\p"
	.string "Please, may I have it?\p"
	.string "I'm not asking for it for free.\n"
	.string "How about in exchange for this TM?$"

EmiliaRoad_CozmosHouse_Text_PleaseUseThisTM:
	.string "PROF. COZMO: This TM, it represents\n"
	.string "my feeling of gratitude.\l"
	.string "Please use it!$"

EmiliaRoad_CozmosHouse_Text_ReallyGoingToHelpMyResearch:
	.string "PROF. COZMO: Oh, I can't believe it.\n"
	.string "This is really, really great!\p"
	.string "This is really going to help my research!$"

EmiliaRoad_CozmosHouse_Text_CrushedWithDisappointment:
	.string "PROF. COZMO: Oh, but…\n"
	.string "I'm crushed with disappointment…$"

EmiliaRoad_CozmosHouse_Text_MayIHaveMeteorite:
	.string "PROF. COZMO: Please, may I have that\n"
	.string "METEORITE?\p"
	.string "I'm not asking for it for free.\n"
	.string "How about in exchange for this TM?$"

EmiliaRoad_CozmosHouse_Text_CozmoWentToMeteorFalls:
	.string "PROF. COZMO went off to METEOR FALLS\n"
	.string "on ROUTE 114 with some people from\l"
	.string "TEAM MAGMA.$"

EmiliaRoad_CozmosHouse_Text_FeelSorryForCozmo:
	.string "Poor PROF. COZMO…\n"
	.string "He's so depressed… I feel sorry for him.$"

EmiliaRoad_CozmosHouse_Text_CozmoIsSoHappy:
	.string "Look at PROF. COZMO…\n"
	.string "He's so happy! I think it's cute.$"

